.row-fluid.devise_common
  .span12
    %h3 로그인
    .title-bar-thin
    .title-bar-thick
.row-fluid.devise_common
  .span3
  .span6
    .fields-box
      .div-width300
        = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
          .field
            = f.label :email 
            = f.email_field :email, :autofocus => true
          .field
            = f.label :password, "비밀번호"
            = f.password_field :password
          -if devise_mapping.rememberable?
            .field
              = f.check_box :remember_me, class: 'inline'
              = f.label :remember_me, "아이디 기억하기", class: 'inline'
          .field  
            = f.submit "로그인", class: 'btn btn-success'
        .field
          = render "devise/shared/links"
  .span3
