.row-fluid
  .span12
    .class-title
      %span 2013년 1학기 컴퓨터 프로그래밍
      .buttons.pull-right
        %a.btn.btn-large.btn-info{ href: "#" } 과제보기
        %a.btn.btn-large.btn-primary{ href: "#" } 제출하기
        %a.btn.btn-large.btn-success{ href: "#" } 결과보기

.row-fluid
  .right-column.span7
    .box
      .box-header
        %h3.box-title 최신 공지사항
      .box-body
        %ul.notice-list#latest-notice
          - @latest_notice.each do |notice|
            %li
              .notice-title
                %span.title= notice.title
                %span.date= notice.created_at
              .notice-detail
                %p= notice.content

  .left-column.span5
    .box
      .box-header
        %h3.box-title 현재 진행중인 과제
        = link_to "새로 만들기", new_subject_path, class:"btn btn-success pull-right margin-top-to-up"
      .box-body
        %ul.subject-list#ongoing-subject
          - @current_subjects.each do |subject|
            %li
              .subject
                %span.title= subject.title
                .btn-group.pull-right
                  = link_to "설명", subject, class:"button btn btn-small btn-primary"
                .problem
                  - subject.problems.each_with_index do |problem, index|
                    = link_to "#{index}. #{problem.title}", subject_problem_path(problem)

    .box
      .box-header
        %h3.box-title 완료된 과제
      .box-body
        %ul.subject-list#outdate-subject
          - @outdate_subjects.each do |subject|
            %li
              .subject
                %span.title= subject.title
                .btn-group.pull-right
                  = link_to "설명", subject, class:"button btn btn-small btn-primary"
                .problem
                  - subject.problems.each_with_index do |problem, index|
                    = link_to "#{index}. #{problem.title}", subject_problem_path(problem)
