.row-fluid
  .span12
    %h3 과목 생성
    .title-bar-thin
    .title-bar-thick
.row-fluid.input-style
  .span2
  .span8
    .fields-box
      .div-width400      
        =form_for Course.new do |f|
          .field
            = f.label :name, "과목명"
            = f.text_field :name, :autofocus => true
          .field
            = f.label :year, "년도"
            = f.text_field :year
          .field
            = f.label :term, "학기"
            = f.text_field :term
          .field
            = f.label :about, "설명"
            = f.text_area :about
          .field
            = f.submit "생성", class: 'btn btn-primary'
