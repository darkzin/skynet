.row-fluid.devise_common
  .span12
    %h3 비밀번호 찾기
    .title-bar-thin
    .title-bar-thick
.row-fluid.devise_common
  .span3
  .span6
    .fields-box
      .div-width300
        = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
          = devise_error_messages!
          .field
            = f.label :학번
            = f.text_field :student_number, :autofocus => true
          .field
            = f.submit "비밀번호 재설정 메일 보내기", class: 'btn btn-info'
        .field  
          = render "devise/shared/links" 
  .span3
