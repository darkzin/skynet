.row-fluid.devise_common
  .span12
    %h3 계정 생성
    .title-bar-thin
    .title-bar-thick
    #wrapper
      =form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
        =devise_error_messages!
        .row-fulid
          .span3
          .span6
            .fields-box 
              .div-width300
                .field
                  = f.label :student_number, "학번"
                  = f.text_field :student_number, :autofocus => true
                .field
                  = f.label :name, "이름"
                  = f.text_field :name
                .field
                  = f.label :email, "이메일"
                  = f.email_field :email
                .field
                  = f.label :phone_number, "전화번호"
                  = f.text_field :phone_number
                .field
                  = f.label :password, "비밀번호"
                  = f.password_field :password
                .field
                  = f.label :password_confirmation, "비밀번호_확인"
                  = f.password_field :password_confirmation
                .field
                  = f.submit "생성", class: 'btn btn-primary'
                .field 
                  = render "devise/shared/links"
          .span3
