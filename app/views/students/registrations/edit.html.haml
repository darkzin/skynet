.row-fluid.devise_common
  .span12
    %h3 정보 수정 - 학생
    .title-bar-thin
    .title-bar-thick
.row-fluid.devise_common
  .span3
  .span6
    .fields-box
      .div-width300
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
          = devise_error_messages!
          .field
            = f.label :email
            = f.email_field :email, :autofocus => true
            - if devise_mapping.confirmable? && resource.pending_reconfirmation?
              %p="메일 확인을 기다리고 있습니다." + resource.unconfirmed_email
          .field
            = f.label :password,"비밀번호"
            %p (변경을 원치 않으시면 공백 상태로 두십시오)
            = f.password_field :password, :autocomplete => "off"
          .field
            = f.label :password_confirmation, "비밀번호 확인"
            = f.password_field :password_confirmation
          .field
            = f.label :current_password, "현재 비밀번호 입력"
            = f.password_field :current_password
          .field
            = f.submit "변경", class: 'btn btn-warning btn-wide'
  .span3
       
.row-fluid.devise_common
  .span12
    %h3 계정삭제
    .title-bar-thin
    .title-bar-thick
.row-fluid.devise_common
  .span3
  .span6
    .fields-box
      .div-width300
        .field
          = button_to "계정삭제", registration_path(resource_name), :data => { :confirm => "정말 삭제하시겠습니까??" }, :method => :delete, class: 'btn btn-danger'
        .field
          = link_to "뒤로가기", :back, class: 'btn btn-info a-white'
  .span3
