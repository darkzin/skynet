.row-fluid
  .span12
    %h3 공지사항
    .title-bar-thin
    .title-bar-thick
.row-fluid.input-style
  .span2
  .span8
    .fields-box
      .div-width400
        = form_for Notice.new do |f|
          = content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] 
          = content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice]
          = content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert]
          .field
            = f.label :title 
            = f.email_field :title, :autofocus => true
          .field
            = f.label :contents
            = f.textarea :contents
          .field  
            = f.submit "등록", class: 'btn btn-success'
  .span2
